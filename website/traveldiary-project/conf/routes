# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

#Home Page
GET         /                                       controllers.MainController.index()

# Basic api GET functions for js-data
GET         /api/vacation                           controllers.MainController.getAllVacations()
GET         /api/vacation/:id                       controllers.MainController.getVacation(id: Integer)
GET         /api/activity                           controllers.MainController.getAllActivities()
GET         /api/activity/:id                       controllers.MainController.getActivity(id: Integer)
GET         /api/keyword                            controllers.MainController.getAllKeywords()
GET         /api/keyword/:id                        controllers.MainController.getKeyword(id: Integer)
GET         /api/location                           controllers.MainController.getAllLocations()
GET         /api/location/:id                       controllers.MainController.getLocation(id: Integer)
GET         /api/role                               controllers.MainController.getAllRoles()
GET         /api/role/:id                           controllers.MainController.getRole(id: Integer)
GET         /api/user                               controllers.MainController.getAllUsers()
GET         /api/user/:id                           controllers.MainController.getUser(id: Integer)
GET         /api/activityreview                     controllers.MainController.getAllActivityReviews()
GET         /api/activityreview/:id                 controllers.MainController.getActivityReview(id: Integer)
GET         /api/vacationreview                     controllers.MainController.getAllVacationReviews()
GET         /api/vacationreview/:id                 controllers.MainController.getVacationReview(id: Integer)
GET         /api/vacationimage                      controllers.MainController.getAllVacationImages()
GET         /api/vacationimage/:id                  controllers.MainController.getVacationImage(id: Integer)
GET         /api/activityimage                      controllers.MainController.getAllActivityImages()
GET         /api/activityimage/:id                  controllers.MainController.getActivityImage(id: Integer)

# All api functions related to the jointables for many to many relationships
GET         /api/vacationkeyword                    controllers.JoinTableController.getAllVacationKeywordsEntries()
GET         /api/vacationkeyword/:vId/:kId          controllers.JoinTableController.getVacationKeywordEntry(vId: Integer, kId: Integer)
GET         /api/activitykeyword                    controllers.JoinTableController.getAllVacationKeywordsEntries()
GET         /api/vacationkeyword/:aId/:kId          controllers.JoinTableController.getVacationKeywordEntry(aId: Integer, kId: Integer)

# Basic api POST functions for js-data
#POST        /api/vacation                           controllers.RegisterController.createVaction()
#POST        /api/activity                           controllers.RegisterController.createActivity()
#POST        /api/keyword                            controllers.RegisterController.createKeyword()
POST        /api/location                            controllers.RegisterController.createLocation()
POST        /api/user                                controllers.RegisterController.createUser()
#POST        /api/vacationreview                     controllers.RegisterController.createVacationReview()
#POST        /api/activityreview                     controllers.RegisterController.createActivityReview()
#POST        /api/vacationimage                      controllers.RegisterController.createVacationImage()
#POST        /api/activityimage                      controllers.RegisterController.createActivityImage()

# Basic ap update functions for single items
#PUT         /api/vacation/:id                       controllers.RegisterController.updateVacation(id: Integer)
#PUT         /api/activity/:id                       controllers.RegisterController.updateActivity(id: Integer)
#PUT         /api/keyword/:id                        controllers.RegisterController.updateKeyword(id: Integer)
#PUT         /api/location/:id                       controllers.RegisterController.updateLocation(id: Integer)
#PUT         /api/user/:id                           controllers.RegisterController.updateUser(id: Integer)
#PUT         /api/activityreview/:id                 controllers.RegisterController.updateActivityReview(id: Integer)
#PUT         /api/vacationreview/:id                 controllers.RegisterController.updateVacationReview(id: Integer)
#PUT         /api/vacationimage/:id                  controllers.RegisterController.updateVacationImage(id: Integer)
#PUT         /api/activityimage/:id                  controllers.RegisterController.updateActivityImage(id: Integer)

# Additional apis for special use cases
GET         /api/keywordsbystring/:keyString        controllers.SearchController.getKeywordsFor(keyString: String)

# Map static resources from the /public folder to the /assets URL path
GET         /assets/*file                           controllers.Assets.at(path="/public", file)
GET         /webjars/*file                          controllers.WebJarAssets.at(file)

